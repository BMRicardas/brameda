---
import { ClientRouter } from "astro:transitions";

import Footer from "@/components/footer.astro";
import Header from "@/components/header.astro";

import "@/styles/normalize.css";
import "@/styles/global.css";

type Props = {
  image?: string;
  title: string;
  description: string;
  robots?: string;
};

const { image, title, description, robots } = Astro.props;

const siteUrl = Astro.site ?? "https://brameda.lt";
const canonicalUrl = Astro.url;
const absoluteOgImage = image ? String(new URL(image, siteUrl)) : undefined;
const robotsContent =
  robots ??
  "index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1";
const keywordsContent =
  "brameda, spa, džiovyklė, antbačiai, pėdų dezinfekatorius, bachilai, dezinfekcija, pėdų dezinfekcija, įmonių kilimėliai";
---

<!doctype html>
<html lang="lt">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Meta basics -->
    <meta name="description" content={description} />
    <meta name="robots" content={robotsContent} />
    <meta name="generator" content={Astro.generator} />
    <meta content={keywordsContent} name="keywords" />

    <!-- Canonical -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="UAB Brameda" />
    <meta property="og:locale" content="lt_LT" />
    {absoluteOgImage && <meta property="og:image" content={absoluteOgImage} />}
    {absoluteOgImage && <meta property="og:image:alt" content={title} />}

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {absoluteOgImage && <meta name="twitter:image" content={absoluteOgImage} />}
    {absoluteOgImage && <meta name="twitter:image:alt" content={title} />}
    <!-- Optional: set your handle -->
    <!-- <meta name="twitter:site" content="@your_handle" /> -->

    <!-- Housekeeping -->
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="sitemap" href="/sitemap-index.xml" type="application/xml" />

    <!-- Performance hints -->
    <link rel="preconnect" href="https://images.ctfassets.net" crossorigin />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="//images.ctfassets.net" />
    <link rel="dns-prefetch" href="//fonts.googleapis.com" />
    <link rel="dns-prefetch" href="//fonts.gstatic.com" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap"
    />
    <ClientRouter fallback="swap" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main id="main">
      <slot />
    </main>
    <Footer />
  </body>
</html>
