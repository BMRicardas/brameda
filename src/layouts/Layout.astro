---
import { ClientRouter } from "astro:transitions";

import Footer from "@/components/footer.astro";
import Header from "@/components/header.astro";
import "@/styles/normalize.css";
import "@/styles/global.css";

type Props = {
  image?: string;
  title: string;
  description: string;
  robots?: string;
};

const { image, title, description, robots } = Astro.props;

const siteUrl = Astro.site ?? "https://brameda.lt";
const canonicalUrl = Astro.url;
const absoluteOgImage = image ? String(new URL(image, siteUrl)) : undefined;
const robotsContent =
  robots ??
  "index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1";
const keywordsContent =
  "brameda, spa, džiovyklė, antbačiai, pėdų dezinfekatorius, bachilai, dezinfekcija, pėdų dezinfekcija, įmonių kilimėliai";
---

<!doctype html>
<html lang="lt">
  <head>
    <meta charset="UTF-8" />
    <meta content="width=device-width, initial-scale=1" name="viewport" />

    <!-- Meta basics -->
    <meta content={description} name="description" />
    <meta content={robotsContent} name="robots" />
    <meta content={Astro.generator} name="generator" />
    <meta content={keywordsContent} name="keywords" />

    <!-- Canonical -->
    <link href={canonicalUrl} rel="canonical" />

    <!-- Open Graph -->
    <meta content="website" property="og:type" />
    <meta content={canonicalUrl} property="og:url" />
    <meta content={title} property="og:title" />
    <meta content={description} property="og:description" />
    <meta content="UAB Brameda" property="og:site_name" />
    <meta content="lt_LT" property="og:locale" />
    {absoluteOgImage && <meta content={absoluteOgImage} property="og:image" />}
    {absoluteOgImage && <meta content={title} property="og:image:alt" />}

    <!-- Twitter -->
    <meta content="summary_large_image" name="twitter:card" />
    <meta content={title} name="twitter:title" />
    <meta content={description} name="twitter:description" />
    {absoluteOgImage && <meta content={absoluteOgImage} name="twitter:image" />}
    {absoluteOgImage && <meta content={title} name="twitter:image:alt" />}
    <!-- Optional: set your handle -->
    <!-- <meta name="twitter:site" content="@your_handle" /> -->

    <!-- Housekeeping -->
    <link href="/favicon.ico" rel="icon" type="image/x-icon" />
    <link href="/sitemap-index.xml" rel="sitemap" type="application/xml" />

    <!-- Performance hints -->
    <link crossorigin href="https://images.ctfassets.net" rel="preconnect" />
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="//images.ctfassets.net" rel="dns-prefetch" />
    <link href="//fonts.googleapis.com" rel="dns-prefetch" />
    <link href="//fonts.gstatic.com" rel="dns-prefetch" />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <ClientRouter fallback="swap" />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main id="main">
      <slot />
    </main>
    <Footer />
  </body>
</html>
