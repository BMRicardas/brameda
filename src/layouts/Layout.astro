---
import { Font } from "astro:assets";

import Header from "@/components/header.astro";
import Footer from "@/components/footer.astro";
import Disclaimer from "@/components/ui/disclaimer.astro";

import "@/styles/normalize.css";
import "@/styles/global.css";

type Props = {
  image?: string;
  title: string;
  description: string;
};

const { image, title, description } = Astro.props;
---

<!doctype html>
<html lang="lt">
  <head>
    <!-- TODO add meta info -->
    <meta charset="UTF-8" />
    <meta content="width=device-width" name="viewport" />
    <meta
      content="brameda, spa, džiovyklė, antbačiai, pėdų dezinfekatorius"
      name="keywords"
    />
    <meta content={image} property="og:image" />
    <meta content={title} property="og:title" />
    <meta content={description} name="description" />
    <meta content={description} property="og:description" />
    <meta content="website" property="og:type" />
    <meta content={Astro.url} property="og:url" />
    <meta content={Astro.generator} name="generator" />
    <link href="/sitemap-index.xml" rel="sitemap" />
    <link href="/favicon.ico" rel="icon" type="image/x-icon" />
    <link rel="canonical" href={Astro.url} />
    <link rel="preconnect" href="https://images.ctfassets.net" crossorigin />
    <Font cssVariable="--font-roboto" preload />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <main id="main">
      <slot />
    </main>
    <Footer />
    <Disclaimer>Svetaine kuriama ir pildoma</Disclaimer>
  </body>
</html>
