---
import Container from "./ui/container.astro";

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <Container innerContentClassList="footerContainer">
    <p>
      {currentYear} &copy; UAB „Brameda“ visos teisės saugomos
    </p>
    <p>
      Sprendimas
      <a href="http://www.ricardas.io" rel="noopener noreferrer" target="_blank"
        >ricardas.io</a
      >
    </p>
  </Container>
</footer>

<style>
  .footer {
    background-color: var(--color-grey-dark2);
    padding-block-start: var(--default-spacing);
  }

  :global(.footerContainer) {
    display: flex;
    justify-content: center;
    gap: var(--default-spacing);
  }

  .footer p {
    color: var(--color-white);
    font-size: 1.5rem;
    text-align: center;
  }

  .footer a:link,
  .footer a:visited {
    color: var(--color-grey-light);
    text-decoration: none;
  }

  .footer a:hover,
  .footer a:active {
    text-decoration: underline;
  }

  @media only screen and (max-width: 50em) {
    :global(.footerContainer) {
      flex-direction: column;
      gap: 0;
    }
  }
</style>
