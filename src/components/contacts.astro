<style>
  article {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--default-spacing);
  }

  article address h4 {
    font-size: 1.7rem;
    font-weight: 500;
    color: var(--color-grey-light2);
  }

  article address ul {
    list-style: none;
    padding: 2.5rem 0;
  }

  article address ul li {
    padding: 0.25rem;
  }

  article address ul li a:link,
  article address ul li a:visited {
    color: var(--color-grey-light2);
    text-decoration: none;
  }

  article address ul li a:hover,
  article div ul li a:active {
    text-decoration: underline;
  }

  article address ul li p {
    color: var(--color-grey-light2);
  }

  @media only screen and (max-width: 50em) {
    article {
      grid-template-columns: auto;

      /* TODO is this a hack? */
      & :first-child {
        order: 2;
      }

      & > address {
        text-align: center;
      }
    }
  }
</style>
