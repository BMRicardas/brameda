---
type Props = {
  innerContentClassList?:
    | string[]
    | string
    | Record<string, boolean>
    | undefined;
};

const { innerContentClassList } = Astro.props;
---

<div class="container">
  <div class:list={[innerContentClassList]}>
    <slot />
  </div>
</div>

<style>
  .container {
    width: var(--max-width);
    max-width: 95%;
    margin: auto;
  }
</style>
