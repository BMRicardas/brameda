---
import BlockTitle from "./block-title.astro";
import Container from "./container.astro";

type Theme = "light" | "dark";

type Props = {
  articleId?: string;
  appearanceMode?: Theme;
  title?: string;
};

const { articleId, appearanceMode = "light", title } = Astro.props;
---

<article
  class:list={[
    "article",
    {
      dark: appearanceMode !== "light",
    },
  ]}
  id={articleId}>
  <Container>
    <BlockTitle appearanceMode={appearanceMode} title={title} />
    <slot />
  </Container>
</article>

<style>
  .article {
    padding-block: var(--default-spacing);
  }

  .article.dark {
    background-color: var(--color-grey-dark2);
    color: var(--color-grey-light);
  }
</style>
