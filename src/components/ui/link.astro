---
type LinkType = "internal" | "external";
type Variant = "light" | "dark";

type Props = {
  linkType: LinkType;
  variant?: Variant;
  href: string;
};

const { linkType, variant = "light", href }: Props = Astro.props;

const isExternal = linkType === "external";
---

<a
  class:list={["btn", { "btn-dark": variant === "dark" }]}
  href={href}
  rel={isExternal ? "noopener noreferrer" : ""}
  target={isExternal ? "_blank" : ""}
>
  <slot />
</a>

<style>
  .btn {
    display: inline-block;
    background: none;
    color: var(--color-grey-dark2);
    text-decoration: none;
    border: 2px solid var(--color-grey-dark2);
    padding: 1.2rem 3rem;
    border-radius: 50px;
    font-size: 1.7rem;
    font-weight: 500;
    cursor: pointer;
    outline: none;
    transition: 0.2s;
  }

  .btn:hover,
  .btn:active,
  .btn:focus {
    color: var(--color-grey-light);
    background: var(--color-grey-dark2);
  }

  .btn-dark {
    color: var(--color-grey-light);
    background: var(--color-grey-dark2);
    border: 2px solid var(--color-grey-light);
  }

  .btn-dark:hover,
  .btn-dark:active,
  .btn-dark:focus {
    color: var(--color-grey-dark2);
    background: var(--color-grey-light);
  }
</style>
