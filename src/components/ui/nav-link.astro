---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a"> & {
  href: string;
  text: string;
};

const { href, text, ...rest } = Astro.props;
---

<a class="nav-link" href={href} {...rest}>
  <span class="link-text">{text}</span>
</a>

<style>
  .nav-link {
    display: block;
    color: var(--color-grey-dark2);
    text-decoration: none;
    text-transform: uppercase;
    position: relative;
    margin: 0 1.5rem;
    padding: 0.2rem;
    font-size: 1.5rem;
    font-weight: 500;
  }

  .link-text {
    position: relative;
    display: inline-block;
  }

  .link-text::after {
    content: "";
    position: absolute;
    width: 100%;
    height: 2px;
    bottom: -4px;
    left: 0;
    background-color: currentColor;
    transform: scaleX(0);
    transform-origin: bottom right;
    transition: transform 0.3s ease-out;
  }

  .nav-link:hover .link-text::after,
  .nav-link:focus .link-text::after {
    transform: scaleX(1);
    transform-origin: bottom left;
  }

  @media (max-width: 50em) {
    .nav-link {
      font-size: 4rem;
      text-align: center;
      padding: 0.5rem 1rem;
    }

    .link-text::after {
      height: 3px;
    }
  }

  /* Touch device support */
  @media (hover: none) {
    .nav-link:active .link-text::after {
      transform: scaleX(1);
      transform-origin: bottom left;
    }
  }
</style>
