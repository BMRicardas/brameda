---
type Props = {
  title?: string;
  subtitle?: string;
};

const {
  title = "Brameda",
  subtitle = "Pa탑ang큰s ergonominiai sprendimai j큰s킬 verslui",
}: Props = Astro.props;
---

<a class="branding" href="/">
  <h1>
    {title}<span>{subtitle}</span>
  </h1>
</a>

<style>
  .branding:any-link {
    text-decoration: none;
    color: #000;
  }

  .branding h1 span,
  .branding h1 {
    display: block;
    transition-duration: var(--transition-duration);
    animation-fill-mode: var(--animation-fill-mode);
    animation-timeline: var(--animation-timeline);
    animation-range-start: var(--animation-range-start);
    animation-range-end: var(--animation-range-end);
  }

  .branding h1 {
    margin: 0;
    font-size: 6.9rem;
    font-weight: 700;
    animation-name: scrolledTitle;
  }

  .branding h1 span {
    margin-top: -0.8rem;
    text-align: center;
    font-size: 1.3rem;
    font-weight: 400;
    color: var(--color-grey-dark2);
    transform: translateY(0);
    opacity: 1;
    animation-name: scrolledSpan;
  }

  @keyframes scrolledTitle {
    from {
      font-size: 6.9rem;
      line-height: 1;
    }
    to {
      font-size: 4.5rem;
      line-height: 1.25;
    }
  }

  @keyframes scrolledSpan {
    from {
      transform: translateY(0);
      opacity: 1;
    }
    to {
      transform: translateY(-100%);
      opacity: 0;
    }
  }
</style>
