---
import { type CollectionEntry, getCollection } from "astro:content";

import type { Product } from "@/schemas/contentful-transformed.types";

import Contacts from "@/components/contacts.astro";
import ProductPage from "@/components/product/product-page.astro";
import Layout from "@/layouts/Layout.astro";
import { renderRichTextToPlainText } from "@/lib/rich-text";
import { getMainPhotoUrl } from "@/utils";

type Props = { product: Product };

export async function getStaticPaths() {
  const products: CollectionEntry<"products">[] =
    await getCollection("products");

  return products.map(({ data: product }) => ({
    params: {
      slug: product.slug,
    },
    props: {
      product: product,
    },
  }));
}

const { product } = Astro.props;
---

<Layout
  description={renderRichTextToPlainText(product.description)}
  image={getMainPhotoUrl(product.mainPhoto.url)}
  title={product.title}>
  <ProductPage product={product} />
  <Contacts />
</Layout>
